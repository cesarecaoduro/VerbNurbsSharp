@page "/line"
@inject IJSRuntime JsRuntime
@inject IBabylonFactory babylonFactory

@using System.Dynamic  

<h3>Line</h3>

<Row>
    <Column ColumnSize="ColumnSize.IsHalf">
        <canvas id="babylonRender" touch-action="none" style="width:100%; height:100%"></canvas>
    </Column>
</Row>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JsRuntime.InvokeVoidAsync("InitializeBabylonScene", "babylonRender");
        await JsRuntime.InvokeVoidAsync("Line");
    }
}
